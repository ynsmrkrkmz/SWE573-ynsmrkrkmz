{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "react-app",
    "react-app/jest",
    "eslint:recommended",
    "plugin:sonarjs/recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "standard-with-typescript",
    "prettier/react",
    "prettier"
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "sonarjs",
    "react",
    "prettier",
    "@typescript-eslint",
    "react-hooks",
    "@emotion"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx", ".tsx", ".ts"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "max-len": ["warn", { "code": 100, "ignorePattern": "^import\\W.*" }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "consistent-return": "off",
    "@typescript-eslint/no-empty-function": "off",
    "@typescript-eslint/promise-function-async": "off",
    "@emotion/jsx-import": "error",
    "sonarjs/no-duplicate-string": "off",
    "no-var": "error"
  },
  "globals": {
    "window": true,
    "require": true,
    "describe": true,
    "it": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "jest": true,
    "beforeAll": true,
    "afterAll": true,
    "gapi": true,
    "grecaptcha": true
  }
}
